script/source = "extends Area2D

@export var zone_name: String = \"\"
@export var show_visual: bool = true  # Toggle to hide/show sprite
@export var visual_color: Color = Color(0, 0, 1, 0.3)  # semi-transparent

func _ready():
	print(\"zoned\")
	# Find the CollisionPolygon2D child
	var poly: CollisionPolygon2D = $CollisionPolygon2D
	if not poly:
		push_warning(\"Zone has no CollisionPolygon2D!\")
		return

	if show_visual:
		# Add Polygon2D child for visual feedback
		var visual: Polygon2D = Polygon2D.new()
		visual.polygon = poly.polygon.duplicate()  # match collision shape
		visual.color = visual_color
		add_child(visual)


